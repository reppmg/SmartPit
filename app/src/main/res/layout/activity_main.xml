<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/start_record"
        android:paddingStart="@dimen/offset_large"
        android:paddingEnd="@dimen/offset_large"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_inactive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/buttonStop"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/stop_record"
        android:paddingStart="@dimen/offset_large"
        android:paddingEnd="@dimen/offset_large"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_active"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textRecordProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_record_in_progress"
        app:layout_constraintBottom_toTopOf="@id/buttonStop"
        app:layout_constraintStart_toStartOf="@id/buttonStart"
        app:layout_constraintEnd_toEndOf="@id/buttonStart"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/offset_large"
        />

</androidx.constraintlayout.widget.ConstraintLayout>